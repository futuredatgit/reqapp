# Database
DB_PASSWORD=your_secure_password_here

# JWT
JWT_SECRET=your_jwt_secret_min_32_chars_here
JWT_REFRESH_SECRET=your_refresh_secret_min_32_chars_here

# Encryption (32 bytes base64 encoded)
ENCRYPTION_KEY=your_32_byte_encryption_key_here

# Admin Account (für initiale Einrichtung)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=secure_admin_password

# Backend
PORT=3001
NODE_ENV=development

# Frontend
REACT_APP_API_URL=http://localhost:3001
REACT_APP_WS_URL=ws://localhost:3001

# Optional: SMTP für Email-Versand
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=smtp_password
SMTP_FROM=noreply@example.com

# GitHub Integration (Optional - wird später konfiguriert)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret